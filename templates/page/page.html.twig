{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% block nav %}
    {% include "@abc_theme/page/nav.html.twig" %}
  {% endblock nav %}

  {% block main %}
    <main>
      {% if page.header %}
        <header class="page__header mb-3">
          {{ page.header }}
        </header>
      {% endif %}

      {% if page.page_title %}
        {% block page_title %}
          <div class="page__page_title">
            <div class="container-fluid">
              {{ page.page_title }}
            </div>
          </div>
        {% endblock %}
      {% endif %}

      {% block filters %}
        {% if page.filters %}
          <div class="container-fluid">
            {{ page.filters }}
          </div>
        {% endif %}
      {% endblock filters %}

      {% if page.content %}
        {% block page_content %}
          <div class="page__content">
            <div class="container-fluid">
              {{ page.content }}
            </div>
          </div>
        {% endblock %}
      {% endif %}
    </main>
  {% endblock %}

  {% block footer %}
    {% include "@abc_theme/page/footer.html.twig" %}
  {% endblock %}

</div>
